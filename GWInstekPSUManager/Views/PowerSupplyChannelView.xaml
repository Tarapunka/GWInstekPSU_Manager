<UserControl x:Class="GWInstekPSUManager.Views.PowerSupplyChannelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GWInstekPSUManager.Views"
             mc:Ignorable="d" 
             Background="White">
    
    <Border x:Name="MainBorder" 
            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}" 
            BorderThickness="1" 
            CornerRadius="0"
            Padding="1">
        <Grid Margin="8" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок и режим -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0 0 0 10">
                
                <TextBlock Text="{Binding ChannelNumber, StringFormat='Channel {0}'}" 
                           FontSize="{DynamicResource TitleFontSize}"
                           FontWeight="Bold" 
                           Foreground="#FF37474F"/>
                <TextBlock Text="{Binding Mode}" 
                           FontSize="{DynamicResource NormalFontSize}"
                           Foreground="#FF607D8B"/>
            </StackPanel>

            <!-- Основные параметры -->
            <UniformGrid Grid.Row="1" Rows="2" Columns="2">
                <!-- Voltage -->
                <Border BorderBrush="#FFBDBDBD" BorderThickness="1" CornerRadius="10" Margin="5">
                    <Border Background="White" CornerRadius="10" Padding="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Voltage" 
                                     FontSize="{DynamicResource SubtitleFontSize}" 
                                     Foreground="#FF8E8E8E" 
                                     FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Voltage}" 
                                         FontSize="{DynamicResource ValueFontSize}" 
                                         Foreground="#FF03A9F4" 
                                         FontWeight="Bold"/>
                                <TextBlock Text="V" 
                                         FontSize="{DynamicResource UnitFontSize}" 
                                         Foreground="#FF03A9F4" 
                                         VerticalAlignment="Bottom" 
                                         Margin="2 0 0 2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Current -->
                <Border BorderBrush="#FFBDBDBD" BorderThickness="1" CornerRadius="10" Margin="5">
                    <Border Background="White" CornerRadius="10" Padding="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Current" 
                                     FontSize="{DynamicResource SubtitleFontSize}" 
                                     Foreground="#FF8E8E8E" 
                                     FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Current}" 
                                         FontSize="{DynamicResource ValueFontSize}" 
                                         Foreground="#FFFFC107" 
                                         FontWeight="Bold"/>
                                <TextBlock Text="A" 
                                         FontSize="{DynamicResource UnitFontSize}" 
                                         Foreground="#FFFFC107" 
                                         VerticalAlignment="Bottom" 
                                         Margin="2 0 0 2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Power -->
                <Border BorderBrush="#FFBDBDBD" BorderThickness="1" CornerRadius="10" Margin="5">
                    <Border Background="White" CornerRadius="10" Padding="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Power" 
                                     FontSize="{DynamicResource SubtitleFontSize}" 
                                     Foreground="#FF8E8E8E" 
                                     FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Power, StringFormat='{}{0:F2}'}" 
                                         FontSize="{DynamicResource ValueFontSize}" 
                                         Foreground="#FF4CAF50" 
                                         FontWeight="Bold"/>
                                <TextBlock Text="W" 
                                         FontSize="{DynamicResource UnitFontSize}" 
                                         Foreground="#FF4CAF50" 
                                         VerticalAlignment="Bottom" 
                                         Margin="2 0 0 2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Capacity -->
                <Border BorderBrush="#FFBDBDBD" BorderThickness="1" CornerRadius="10" Margin="5">
                    <Border Background="White" CornerRadius="10" Padding="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Capacity" 
                                     FontSize="{DynamicResource SubtitleFontSize}" 
                                     Foreground="#FF8E8E8E" 
                                     FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Capacity}" 
                                         FontSize="{DynamicResource ValueFontSize}" 
                                         Foreground="#FF9C27B0" 
                                         FontWeight="Bold"/>
                                <TextBlock Text="Ah" 
                                         FontSize="{DynamicResource UnitFontSize}" 
                                         Foreground="#FF9C27B0" 
                                         VerticalAlignment="Bottom" 
                                         Margin="2 0 0 2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>