<Window x:Class="GWInstekPSUManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GWInstekPSUManager.Views"
        xmlns:vm="clr-namespace:GWInstekPSUManager.ViewModels"
        Title="GW Instek Manager" Height="600" Width="800">
    <Grid>
        <TabControl>
            <!-- Первая вкладка - оригинальный интерфейс -->
            <TabItem Header="Device Management">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>

                    <!-- Основная рабочая область -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель настроек подключения -->
                        <Border Grid.Row="0" Background="#EEE" Padding="10" Margin="5"
                                BorderBrush="LightGray" BorderThickness="0,0,0,1">
                            <StackPanel>
                                <TextBlock Text="{Binding StatusMessage}"/>
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox ItemsSource="{Binding AvailablePorts}"
                                          SelectedItem="{Binding SelectedPort}"
                                          Width="250" Margin="5" >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding PortName}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="10"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ComboBox Width="80" Margin="0,0,10,0"
                                         ItemsSource="{Binding AvailableBaudRates}"
                                         SelectedItem="{Binding BaudRate}"/>
                                    <Button Content="Connect" Command="{Binding ConnectCommand}"
                                        Padding="10,3" MinWidth="80"/>
                                    <Button Content="Disconnect" Command="{Binding DisconnectCommand}"
                                        Padding="10,3" MinWidth="80" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Область работы с устройством -->
                        <local:DeviceView Grid.Row="1" DataContext="{Binding SelectedDeviceViewModel}"
                                          Margin="5"/>
                    </Grid>

                    <!-- Список подключенных устройств справа -->
                    <Border Grid.Column="1" Background="#F5F5F5" BorderBrush="LightGray" BorderThickness="1,0,0,0">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="{Binding StatusMessage}" FontWeight="Bold"
                                   Padding="10,5" Background="#DDD"/>
                            <ListView ItemsSource="{Binding DeviceViewModels}"
                                      SelectedItem="{Binding SelectedDeviceViewModel}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Padding="5" Margin="2" Background="White" CornerRadius="3">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding DeviceName}" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DeviceService.Connection.ConnectionName, 
                                                        StringFormat='Connected to {0}'}"/>
                                                </StackPanel>
                                            </Border>
                                            <Button Content="Disconnect"
                                                    Command="{Binding DataContext.DisconnectCommand,
                                                RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}" Margin="2" Padding="2"/>
                                            <Button Content="Remove" 
                                                    Command="{Binding DataContext.RemoveDeviceCommand,
                                                RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}" Margin="2" Padding="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вторая вкладка - ChannelManagerView -->
            <TabItem Header="Channel Management">
                <local:ChannelManagerView DataContext="{Binding ChannelManager}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>